{
  "name": "@eslint-stylistic/monorepo",
  "type": "module",
  "version": "1.2.0",
  "private": true,
  "packageManager": "pnpm@8.10.5",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "stub": "pnpm -r --parallel run stub",
    "lint": "eslint . --cache",
    "update": "esno scripts/update.ts && pnpm run lint --fix",
    "release": "bumpp -r && esno scripts/publish.ts",
    "test": "vitest",
    "check": "pnpm run update && pnpm run build && pnpm run typecheck && pnpm run test --run",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "simple-git-hooks",
    "docs": "pnpm -C docs run docs:dev",
    "docs:build": "pnpm -C docs run docs:build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.1.4",
    "@antfu/eslint-define-config": "1.23.0-2",
    "@antfu/ni": "^0.21.9",
    "@antfu/utils": "^0.7.6",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@stylistic/eslint-plugin-js": "workspace:*",
    "@stylistic/eslint-plugin-migrate": "workspace:*",
    "@stylistic/eslint-plugin-ts": "workspace:*",
    "@types/eslint": "^8.44.7",
    "@types/estraverse": "^5.1.6",
    "@types/estree": "^1.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.9.0",
    "@types/semver": "^7.5.5",
    "@typescript-eslint/utils": "^6.11.0",
    "@vitest/coverage-v8": "^0.34.6",
    "bumpp": "^9.2.0",
    "change-case": "^5.1.2",
    "eslint": "^8.53.0",
    "eslint-plugin-antfu": "^1.0.9",
    "esno": "^4.0.0",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.1.1",
    "json-schema": "^0.4.0",
    "json-schema-to-typescript": "^13.1.1",
    "lint-staged": "^15.1.0",
    "pnpm": "^8.10.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.4.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "semver": "^7.5.4",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vite": "^4.5.0",
    "vitest": "^0.34.6",
    "vue": "^3.3.8",
    "vue-tsc": "^1.8.22"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
