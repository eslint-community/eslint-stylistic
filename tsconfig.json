{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@eslint-stylistic/metadata": [
        "./packages/metadata/src/index.ts"
      ],
      "@stylistic/eslint-plugin-js": [
        "./packages/eslint-plugin-js/src/index.js",
        "./packages/eslint-plugin-js/dts/index.d.ts"
      ],
      "@stylistic/eslint-plugin-ts": [
        "./packages/eslint-plugin-ts/src/index.ts",
        "./packages/eslint-plugin-ts/dts/index.d.ts"
      ],
      "@stylistic/eslint-plugin-jsx": [
        "./packages/eslint-plugin-jsx/src/index.js",
        "./packages/eslint-plugin-jsx/dts/index.d.ts"
      ],
      "@stylistic/eslint-plugin": [
        "./packages/eslint-plugin/src/index.ts",
        "./packages/eslint-plugin/dts/index.d.ts"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.js",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.mts",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.vue"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
