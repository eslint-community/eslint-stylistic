{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@eslint-stylistic/metadata": [
        "./packages/metadata/src/index.ts"
      ],
      "@stylistic/eslint-plugin-js": [
        "./packages/eslint-plugin-js/src/index.ts"
      ],
      "@stylistic/eslint-plugin-ts": [
        "./packages/eslint-plugin-ts/src/index.ts"
      ],
      "@stylistic/eslint-plugin-jsx": [
        "./packages/eslint-plugin-jsx/src/index.ts"
      ],
      "@stylistic/eslint-plugin-extra": [
        "./packages/eslint-plugin-extra/src/index.ts"
      ],
      "@stylistic/eslint-plugin": [
        "./packages/eslint-plugin/src/index.ts"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "playground/eslint.config.js",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.mts",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.vue"
  ],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/fixtures/**"
  ]
}
